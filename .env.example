# 应用基础配置
APP_NAME="Medical RAG System"
APP_VERSION="2.0.0"
DEBUG=false
LOG_LEVEL="INFO"
ENVIRONMENT="development"

# API配置
API_HOST="0.0.0.0"
API_PORT=8001
HOST=0.0.0.0
PORT=8001

# MySQL数据库配置
DATABASE_URL="mysql+pymysql://toolkit:12345678!@localhost:3306/medical_rag"
MYSQL_HOST="localhost"
MYSQL_PORT=3306
MYSQL_USER="toolkit"
MYSQL_PASSWORD="12345678!"
MYSQL_DATABASE="medical_rag"

# Redis配置
REDIS_URL=redis://localhost:6379/0

# Deepseek配置
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# 千问API配置
QIANWEN_API_KEY=your-qianwen-api-key-here
QIANWEN_BASE_URL=https://dashscope.aliyuncs.com
QIANWEN_EMBEDDING_MODEL=text-embedding-v4
